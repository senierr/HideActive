<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/layout_top_bar_normal"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/white"
        android:padding="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/portrait"
            android:textColor="@color/text_title"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_portrait"
            android:src="@drawable/ic_default_portrait"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"
        android:padding="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/account"
            android:textColor="@color/text_title"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_account"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_sub_sub"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:background="@color/bg_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"/>

    <RelativeLayout
        android:id="@+id/rl_nickname"
        android:background="@color/white"
        android:padding="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/nickname"
            android:textColor="@color/text_title"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:text="@string/click_to_edit"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_sub_sub"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_remark"
        android:background="@color/white"
        android:padding="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/remark"
            android:textColor="@color/text_title"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_remark"
            android:text="@string/click_to_edit"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_sub_sub"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <Button
        android:text="@string/logout"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_white"
        android:padding="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_32"
        style="@style/BaseButton"
        android:background="@drawable/shape_corner"
        android:backgroundTint="@color/color_button_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="@string/logout"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_white"
        android:padding="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_32"
        style="@style/BaseButton"
        android:background="@drawable/shape_corner"
        android:backgroundTint="@color/color_button_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
